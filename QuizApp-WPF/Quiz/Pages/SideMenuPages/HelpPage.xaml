<local:BaseSideMenuPage x:TypeArguments="core:SideMenuViewModel" x:Class="Quiz.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz"
      xmlns:core="clr-namespace:Quiz.Core;assembly=Quiz.Core"
      mc:Ignorable="d" 
      x:Name="helpPage"
      Title="HelpPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Text with help message -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding HelpText}"
                   TextTrimming="WordEllipsis"
                   TextWrapping="Wrap"
                   FontFamily="{StaticResource LatoRegular}"
                   FontSize="{StaticResource FontSizeMedium}"
                   Margin="20" />
        <TextBlock Grid.Row="1" x:Name="tbTime" FontFamily="Calibri" FontSize="30" Margin="0,0,0,12" Height="37" VerticalAlignment="Bottom"/>
    </Grid>
</local:BaseSideMenuPage>
